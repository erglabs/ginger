_:ginger_bin()
{
  shit() { _:gt_error_n "i cant find executable: ${1} " ; }
  if [[ ! -f ${1} ]]; then
    if ! which ${1} &>/dev/null ; then
      shit ${1} ; return 1;
    fi
  fi
  return 0
  # ( (  || [[ -f $(which ${1} ) ]] ) ||  && return 0 ) ||  ( shit $1 ; return 1; )
}