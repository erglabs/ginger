_:gassert_is_sudo()
{
  if [[ $UID != 0 ]]; then return 0 ; fi
  if ! _:ginger_bin sudo ; then 
    (sudo -n uname &>/dev/null && return 0) || return 1
  fi
}

# one name or list
_:ginger_function()
{
  shit() { _:gt_error_n "function not sourced or does not exist: ${1}" ; }
	( type -t $1 &>/dev/null && return 0 ) ||  ( shit $1 ; return 1; )
}

